{
    "compilerOptions": {
        "target": "es5",                          
        "module": "esnext",                       
        "allowJs": true,                          
        "jsx": "react",                           
        "jsxFactory": "h",                        
        "noEmit": true,                           
        "strict": true,                           
        "moduleResolution": "node",               
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build"],
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
}
